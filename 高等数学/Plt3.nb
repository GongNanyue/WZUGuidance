Plt3[f_, R_] := 
  Plot3D[f, {x, -R, R}, {y, -R, R}, AxesLabel -> Automatic, 
   PlotTheme -> "Detailed", BoxRatios -> {1, 1, 1}, 
   PlotRange -> {{-R, R}, {-R, R}, {-R, R}}, ClippingStyle -> None];

ContourPlt3[f_, R_] := 
  ContourPlot3D[f, {x, -R, R}, {y, -R, R}, {z, -R, R}, 
   AxesLabel -> Automatic, PlotTheme -> "Detailed", 
   BoxRatios -> {1, 1, 1}, PlotRange -> {{-R, R}, {-R, R}, {-R, R}}];

(*画出F(x,y,z)=0,G(x,y,z)=0的三维曲线*)
plotFwithIntersection = 
  ContourPlot3D[F[x, y, z] == 0, {x, -2, 2}, {y, -2, 2}, {z, -2, 2}, 
   PlotPoints -> 50, MaxRecursion -> 3, 
   MeshFunctions -> {Function[{x, y, z, f}, G[x, y, z]]}, 
   Mesh -> {{0}}, MeshStyle -> Directive[Thick, Red], 
   ContourStyle -> Opacity[0.2, Blue],(*设置 F=0 曲面样式：半透明蓝色*)
   AxesLabel -> {"x", "y", "z"}, Boxed -> True];
plotG = ContourPlot3D[
   G[x, y, z] == 0, {x, -2, 2}, {y, -2, 2}, {z, 0, 
    2},(*调整 G 的绘图范围以匹配其形状*)PlotPoints -> 50, MaxRecursion -> 3, 
   ContourStyle -> Opacity[0.2, Green] (*设置 G=0 曲面样式：半透明绿色*), 
   Mesh -> None];
Show[plotFwithIntersection, plotG]
