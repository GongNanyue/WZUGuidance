#include <stdio.h>
int main()
{
    int n;
    while (scanf("%d",&n)!=EOF)
    {
        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < 2*(i+1)-1; j++)
            {
                printf("*");
            }
            printf("\n");
        }
        for (int i = n; i > 0; i--)
        {
            for (int j = 2*(i-1)-1; j > 0; j--)
            {
                printf("*");
            }
            printf("\n");
        }
    }
    return 0;
}
